@model trabalho_rodeio.Models.Montaria

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Montaria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PeaoId" class="control-label"></label>
                <select asp-for="PeaoId" asp-items="ViewBag.PeaoList" class="form-control">
                    <option value="">-- Select Peao --</option>
                </select>
                <span asp-validation-for="PeaoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TouroId" class="control-label"></label>
                <select asp-for="TouroId" asp-items="ViewBag.TouroList" class="form-control">
                    <option value="">-- Select Touro --</option>
                </select>
                <span asp-validation-for="TouroId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
